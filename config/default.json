{
    "port": 3000,
    "jwt_secret": "mysecret",
    "enable_email_validation": true,
    "enable_password_validation": true,
    "enable_filename_validation": true,
    "enable_cors": true,
    "bcrypt_salt_rounds": 10,
    "uploads_dir": "uploads/",
    "temp_dir": "temp/",
    "nearby_search_storypoints_radius_km": 50,
    "nearby_search_storypoints_limit": 15,
    "image_file_endings": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".webp",
        ".svg",
        ".tiff"
    ],
    "thumbnail_width": 200,
    "thumbnail_height": 200,
    "mongodb": {
        "uri": "mongodb://localhost:27017",
        "db_name": "geobase",
        "companies_collection": "companies",
        "users_collection": "users",
        "storypoints_collection": "storypoints",
        "token_blacklist_collection": "jwt_token_blacklist",
        "fsgrid_files_collection": "fs.files",
        "fsgrid_chunk_collection": "fs.chunks",
        "use_authentication": false
    },
    "fuseOptions": {
        "isCaseSensitive": false,
        "includeScore": false,
        "shouldSort": true,
        "keys": [
            "title",
            "coords",
            "description"
        ]
    },
    "fuseSearchOptions": {
        "limit": 15
    }
}
